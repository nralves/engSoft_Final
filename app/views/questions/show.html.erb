<div class="question show">
  <div class="question">
    <div class="user">
      <strong>User:</strong>
      <%= @question.user_id %>
    </div>
    <div class="title">
      <%= @question.title %>
    </div>

    <div class="body">
      <%= @question.body %>
    </div>

    <div class="topic">
    <h3> Topicos </h3>

       <% (@question.skills).each do |skill| %>
          <span class="skill"><%= Skill.find(skill.id).name %></span>
      <% end -%>
    </div>
  </div>
  <hr>
  <h2> Responder </h2>
      <%= form_for :answer, url: { action: "add_answer_to_question", :question_id=>@question.id} do |f| %>
            <div class="field">
              <%= f.label :body %><br>
              <%= f.text_area :body %>
            </div>
            <div class="field">
              <%= f.hidden_field :question_id, :value=> @question.id %>
            </div>
            <div class="field">
            <%= f.hidden_field :user_id, :value=> UsersController::USERID %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
      <% end %>

  <%= link_to 'Edit', edit_question_path(@question) %> |
  <%= link_to 'Back', questions_path %>
</div>