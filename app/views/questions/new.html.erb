<div class="question add">
	<h1>Adicionar questão</h1>

	<%= render 'form' %>
	<div class="field">
        <% for skill in Skill.all %>
            <div>
                <%= check_box_tag "question[skill_ids][]", skill.id, @question.skills.include?(skill) %>
                <%= skill.name %>
            </div>
        <% end %>
    </div>
	<div class="topics">
		<h3> Tópicos </h3>
		<% (@question.skills).each do |skill| %>
	    <span class="skill"><%= Skill.find(skill.id).name %></span>
	  <% end -%>
	</div>

	<%= link_to 'Mostrar', @question %> |
	<%= link_to 'Voltar', questions_path %>
</div>
